<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.wrongwaystudios.iou.LoginActivity"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ioulogo"
            android:scaleType="fitCenter"
            android:layout_marginTop="32dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/login_username"
            app:met_floatingLabel="highlight"
            app:met_baseColor="#ffffff"
            app:met_primaryColor="#ffffff"
            app:met_textColor="#ffffff"
            app:met_textColorHint="#ffffff"
            app:met_errorColor="#ffffff"
            app:met_helperTextColor="#ffffff"
            app:met_underlineColor="#ffffff"
            app:met_floatingLabelTextColor="#ffffff"
            android:layout_marginTop="65dp"
            android:id="@+id/username_edit"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/signup_first_hint"
            app:met_floatingLabel="highlight"
            app:met_baseColor="#ffffff"
            app:met_primaryColor="#ffffff"
            app:met_textColor="#ffffff"
            app:met_textColorHint="#ffffff"
            app:met_errorColor="#ffffff"
            app:met_helperTextColor="#ffffff"
            app:met_underlineColor="#ffffff"
            app:met_floatingLabelTextColor="#ffffff"
            android:id="@+id/first_name_edit"
            android:layout_below="@+id/username_edit"
            android:layout_centerHorizontal="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/signup_last_hint"
            app:met_floatingLabel="highlight"
            app:met_baseColor="#ffffff"
            app:met_primaryColor="#ffffff"
            app:met_textColor="#ffffff"
            app:met_textColorHint="#ffffff"
            app:met_errorColor="#ffffff"
            app:met_helperTextColor="#ffffff"
            app:met_underlineColor="#ffffff"
            app:met_floatingLabelTextColor="#ffffff"
            android:id="@+id/last_name_edit"
            android:layout_below="@+id/first_name_edit"
            android:layout_centerHorizontal="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/login_password"
            app:met_floatingLabel="highlight"
            app:met_baseColor="#ffffff"
            app:met_primaryColor="#ffffff"
            app:met_textColor="#ffffff"
            app:met_textColorHint="#ffffff"
            app:met_errorColor="#ffffff"
            app:met_helperTextColor="#ffffff"
            app:met_underlineColor="#ffffff"
            app:met_floatingLabelTextColor="#ffffff"
            android:textColor="@android:color/white"
            android:inputType="textPassword"
            android:layout_below="@+id/last_name_edit"
            android:layout_alignStart="@+id/username_edit"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/re_password_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/signup_re_password_hint"
            app:met_floatingLabel="highlight"
            app:met_baseColor="#ffffff"
            app:met_primaryColor="#ffffff"
            app:met_textColor="#ffffff"
            app:met_textColorHint="#ffffff"
            app:met_errorColor="#ffffff"
            app:met_helperTextColor="#ffffff"
            app:met_underlineColor="#ffffff"
            app:met_floatingLabelTextColor="#ffffff"
            android:textColor="@android:color/white"
            android:inputType="textPassword"
            android:layout_below="@+id/password_edit"
            android:layout_alignStart="@+id/username_edit"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_sign_in"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="2dp"
            fancy:fb_focusColor="@color/colorPrimary"
            fancy:fb_defaultColor="@color/colorPrimaryMid"
            fancy:fb_radius="30dp"
            fancy:fb_text="@string/login_signin"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="18dp"
            android:layout_below="@+id/re_password_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_sign_up"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="2dp"
            fancy:fb_focusColor="@color/colorPrimary"
            fancy:fb_defaultColor="@color/colorPrimaryMid"
            fancy:fb_radius="30dp"
            fancy:fb_text="@string/login_signup"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="18dp"
            android:layout_below="@+id/btn_sign_in"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_cancel_sign_up"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="2dp"
            fancy:fb_focusColor="@color/colorPrimary"
            fancy:fb_defaultColor="@color/colorPrimaryMid"
            fancy:fb_radius="30dp"
            fancy:fb_text="@string/signup_cancel"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="18dp"
            android:layout_below="@+id/btn_sign_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_loading_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#00000000"
            app:mainColor="@color/colorAccent"
            app:secondaryColor="@color/colorPrimaryDark"
            app:textColor="@android:color/white"
            android:layout_below="@+id/re_password_edit"
            android:layout_alignStart="@+id/btn_sign_in"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>